<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#d9d9d9"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    android:paddingBottom="8dp"
    card_view:contentPaddingBottom="10dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/venue_image"
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:src="@drawable/background"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
               />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#30000000"
                android:layout_marginTop="95dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Offline"
                android:id="@+id/venue_name"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Hauz Khas,Delhi"
                android:textColor="@android:color/white"
                android:id="@+id/address"
                android:layout_below="@+id/venue_name"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.8"
                android:textColor="@android:color/white"
                android:background="@drawable/roundrectangle"
                android:layout_marginRight="18dp"
                android:layout_marginEnd="22dp"
                android:layout_alignBottom="@+id/address"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="7dp"
                />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar and Lounge"
                android:textStyle="italic"
                android:layout_marginLeft="8dp"
                android:textSize="11sp"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tip_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category"
                android:text="48 Reviews"
                android:textSize="11sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                />
           <!-- <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250 m"
                android:background="@drawable/round_rec"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="8dp"
                android:textSize="9sp"
                android:layout_marginRight="16dp"
                android:layout_centerInParent="true"
                />-->

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>